@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MusicalStore.Models.Dtos.Manufacturers.ManufacturerDto

@{
    ViewData["Title"] = "Delete Manufacturer";
}

<h1>Delete Manufacturer</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManufacturerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManufacturerName)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CountryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountryName)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InstrumentsCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InstrumentsCount)
        </dd>
    </dl>
    
    <h5 class="text-danger">This will delete all instrument associated with this manufacturer</h5>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </form>
</div>
